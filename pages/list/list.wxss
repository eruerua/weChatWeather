/* pages/list/list.wxss */
.date-item {
  display: flex;
  align-items: center;
  height: 150rpx;
  margin: 0 40rpx;
  border-bottom: 1px solid rgba(0, 0, 0, 0.1);
}

.day{
  opacity: 0.8;
  font-size: 40rpx;
  line-height: 56rpx;
}

.date{
  opacity: 0.5;
  font-size: 25rpx;
  line-height: 35rpx;
}

.temp{
  flex-grow: 1;
  padding-right: 60rpx;
  text-align: center;
  opacity: 0.8;
  font-size: 40rpx;
  line-height: 56rpx;
}

.weather-icon{
  width: 90rpx;
  height: 90rpx;
}


.forecast-list {
    display:flex
}

.forecast-item {
    display:flex;
    width: 375rpx;
    flex-shrink: 0;
    flex-direction:column;
    align-items:center;
}

.forecast-time {
  font-size: 30rpx;
  line-height: 42rpx;
}

.forecast-weather {
  margin-top: 20rpx;
  margin-bottom: 20rpx;
  width: 60rpx;
  height: 60rpx;
}

.forecast-temp {
  font-size: 30rpx;
  line-height: 42rpx
}
