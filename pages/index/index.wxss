.weather-wrapper{
  position: relative;
  padding-top: 174rpx;
  padding-bottom: 150rpx;
}

.temp {
  text-align:center;
  font-size:150rpx;
  line-height:280rpx;
  opacity:0.8;
}

.weather,.city {
  text-align: center;
  font-size: 40rpx;
  line-height: 56rpx;
  opacity: 0.8;
}

.weather-bg {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: -1;
}

.timetips {
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 40rpx;
  margin-bottom: 45rpx;
}

.timetips-icon {
  margin-right: 10rpx;
  width: 36rpx;
  height: 28rpx;
}

.timetips-text {
  font-size: 30rpx;
  line-height: 42rpx;
  opacity: 0.5;
}

.forecast-list {
    display:flex
}

.forecast-item {
    display:flex;
    width: 750rpx;
    flex-shrink: 0;
    flex-direction:column;
    align-items:center;
}

.forecast-time {
  font-size: 25rpx;
  line-height: 35rpx;
}

.forecast-weather {
  margin-top: 20rpx;
  margin-bottom: 20rpx;
  width: 60rpx;
  height: 60rpx;
}

.forecast-temp {
  font-size: 25rpx;
  line-height: 35rpx
}

.day-weather {
  display: flex;
  align-items: center;
  position: absolute;
  bottom:0;
  left: 40rpx;
  right: 40rpx;
  height: 90rpx;
  border-top: 1px solid rgba(0, 0, 0, 0.1);
  font-size: 30rpx;
  line-height: 42rpx;
  color: rgba(0, 0, 0, 0.5)
}

.temp-text {
  flex-grow: 1;
  padding-right: 30rpx;
  text-align: right;
}

.arrow-icon {
  width: 13rpx;
  height: 24rpx;
}